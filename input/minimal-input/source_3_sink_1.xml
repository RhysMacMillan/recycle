<?xml version="1.0"?>
<!-- 1 Source Source, 1 Sink Sink -->

<simulation>
  <control>
    <duration>10</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
  </control>

  <commodity>
    <name>commodity</name>
  </commodity>

  <facility>
    <name>Source</name>
    <spec>
      <lib>cycamore</lib>
      <agent>Source</agent>
    </spec>
    <agent>
      <Source>
        <out_commod>commodity</out_commod>
        <capacity>1</capacity>
        <recipe_name>commod_recipe</recipe_name>
      </Source>
    </agent>
  </facility>
  
  <facility>
    <name>Sink</name>
    <spec>
      <lib>cycamore</lib>
      <agent>Sink</agent>
    </spec>
    <agent>
      <Sink>
        <in_commods>
          <val>commodity</val>
        </in_commods>
        <capacity>3</capacity>
      </Sink>
    </agent>
  </facility>

  <region>
    <name>SingleRegion</name>
    <spec>
      <lib>agents</lib>
      <agent>NullRegion</agent>
    </spec>
    <agent><NullRegion/></agent>
    <institution>
      <name>SingleInstitution</name>
      <spec>
        <lib>agents</lib>
        <agent>NullInst</agent>
      </spec>
      <initialfacilitylist>
        <entry>
          <prototype>Source</prototype>
          <number>3</number>
        </entry>
        <entry>
          <prototype>Sink</prototype>
          <number>1</number>
        </entry>
      </initialfacilitylist>
      <agent><NullInst/></agent>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>010010000</id>
      <comp>1</comp>
    </nuclide>
  </recipe>

</simulation>

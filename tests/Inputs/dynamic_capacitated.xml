<?xml version="1.0"?>
<!-- Dynamic Capacitated -->

<simulation>
  <control>
    <duration>4</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
    <decay>0</decay>
  </control>

  <commodity>
    <name>commodity</name>
  </commodity>

  <facility>
    <name>Source</name>
    <module>
      <lib>agents</lib>
      <agent>Source</agent>
    </module>
    <agent>
      <Source>
        <commod>commodity</commod>
        <recipe_name>commod_recipe</recipe_name>
        <capacity>1.0</capacity>
      </Source>
    </agent>
  </facility>

  <facility>
    <name>Sink</name>
    <module>
      <lib>agents</lib>
      <agent>Sink</agent>
    </module>
    <lifetime>1</lifetime>
    <agent>
      <Sink>
        <in_commods>
          <val>commodity</val>
        </in_commods>
        <capacity>1.0</capacity>
      </Sink>
    </agent>
  </facility>

  <region>
    <name>SingleRegion</name>
    <module>
      <lib>agents</lib>
      <agent>NullRegion</agent>
    </module>
    <allowedfacility>Source</allowedfacility>
    <allowedfacility>Sink</allowedfacility>
    <agent>
      <NullRegion/>
    </agent>
    <institution>
      <name>SingleInstitution</name>
      <module>
        <lib>cycamore</lib>
        <agent>DeployInst</agent>
      </module>
      <availableprototype>Source</availableprototype>
      <availableprototype>Sink</availableprototype>
      <agent>
        <DeployInst>
          <buildorder>
            <prototype>Source</prototype>
            <number>3</number>
            <date>1</date>
          </buildorder>
          <buildorder>
            <prototype>Sink</prototype>
            <number>2</number>
            <date>1</date>
          </buildorder>
          <buildorder>
            <prototype>Sink</prototype>
            <number>2</number>
            <date>2</date>
          </buildorder>
        </DeployInst>
      </agent>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>010010000</id>
      <comp>1</comp>
    </nuclide>
  </recipe>

</simulation>

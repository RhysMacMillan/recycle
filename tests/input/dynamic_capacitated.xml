<!-- Dynamic Capacitated -->

<simulation>
  <control>
    <duration>4</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
  </control>

  <archetypes>
    <spec><lib>agents</lib><archetype>Sink</archetype></spec>
    <spec><lib>agents</lib><archetype>Source</archetype></spec>
    <spec><lib>agents</lib><archetype>NullRegion</archetype></spec>
    <spec><lib>cycamore</lib><archetype>DeployInst</archetype></spec>
  </archetypes>

  <facility>
    <name>Source</name>
    <archetype>Source</archetype>
    <config>
      <Source>
        <commod>commodity</commod>
        <recipe_name>commod_recipe</recipe_name>
        <capacity>1.0</capacity>
      </Source>
    </config>
  </facility>

  <facility>
    <name>Sink</name>
    <archetype>Sink</archetype>
    <lifetime>1</lifetime>
    <config>
      <Sink>
        <in_commods>
          <val>commodity</val>
        </in_commods>
        <capacity>1.0</capacity>
      </Sink>
    </config>
  </facility>

  <region>
    <name>SingleRegion</name>
    <archetype>NullRegion</archetype>
    <config>
      <NullRegion/>
    </config>
    <institution>
      <name>SingleInstitution</name>
      <archetype>DeployInst</archetype>
      <config>
        <DeployInst>
          <buildorder>
            <prototype>Source</prototype>
            <number>3</number>
            <date>1</date>
          </buildorder>
          <buildorder>
            <prototype>Sink</prototype>
            <number>2</number>
            <date>1</date>
          </buildorder>
          <buildorder>
            <prototype>Sink</prototype>
            <number>2</number>
            <date>2</date>
          </buildorder>
        </DeployInst>
      </config>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>010010000</id>
      <comp>1</comp>
    </nuclide>
  </recipe>

</simulation>
